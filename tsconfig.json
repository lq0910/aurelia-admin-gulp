{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "mocha",
            "jquery"
        ],
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "css",
        "img",
        "js",
        "config.js",
        "gulpfile.js",
    ]
}